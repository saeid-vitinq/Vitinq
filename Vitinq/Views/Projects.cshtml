@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.Projects>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = "Layout.cshtml";
    ContentModels.Projects projects = Model.Content;
    ContentModels.ProjectsDT projectsDT = projects.Main.Current as ProjectsDT;
    List<Project> projectList = projects.Children<Project>( ).ToList( );
}


<div class="site-blocks-cover inner-page-cover overlay" style="background-image: url(@projectsDT.Banner.Url);" data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">
            <div class="col-md-12" data-aos="fade-up" data-aos-delay="400">

                <div class="row justify-content-center mb-4">
                    <div class="col-md-8 text-center">
                        <h1>@projectsDT.Title</h1>
                        <p class="lead mb-5">@projectsDT.SubTitle</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<section class="site-section">

    <div class="container">
        <div class="row">
            @foreach( Project item in projectList )
            {
                ProjectDT projectDT = item.Main.Current as ProjectDT;
                <div class="col-md-6 col-lg-4 mb-4">
                    <a href="#" class="media-1">
                        <img src="@projectDT.MainPhoto.Url" alt="@projectDT.MainPhoto.Name" class="img-fluid">
                        <div class="media-1-content">
                            <h2>@projectDT.Title</h2>
                            <span class="category">@projectDT.SubTitle</span>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</section>

