@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.About>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = "Layout.cshtml";
    About about = Model.Content;
    AboutDT aboutDT = about.Main.Current as AboutDT;

    List<IPublishedContent> aboutUsList = new List<IPublishedContent>( );
    if( about.AboutUsItems != null )
    {
        aboutUsList = about.AboutUsItems.ToList( );
    }
    List<IPublishedContent> memberList = new List<IPublishedContent>( );
    if( about.TeamMembers != null )
    {
        memberList = about.TeamMembers.ToList( );
    }
    bool firstSet = false;
}
<div class="site-blocks-cover inner-page-cover overlay" style="background-image: url(@aboutDT.Banner.Url);" data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">
            <div class="col-md-12" data-aos="fade-up" data-aos-delay="400">

                <div class="row justify-content-center mb-4">
                    <div class="col-md-8 text-center">
                        <h1>@aboutDT.Title</h1>
                        <p class="lead mb-5">@aboutDT.SubTitle</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="site-section">
    <div class="container">
        <div class="row mb-5">

            <div class="col-md-5 ml-auto mb-5 order-md-2" data-aos="fade">
                <img src="@aboutDT.Photo.Url" alt="Image" class="img-fluid rounded">
            </div>
            <div class="col-md-6 order-md-1" data-aos="fade">
                <div class="row">
                    <div class="col-12 mb-4">
                        @*<div class="text-left pb-1 border-primary mb-4">
                            <h2 class="text-primary">@Umbraco.GetDictionaryValue( "Our_Specialties" )</h2>
                        </div>*@
                    </div>
                    @foreach( IPublishedContent item in aboutUsList )
                    {
                        AboutUs aboutUs = item as AboutUs;
                        AboutUsDT aboutUsDT = aboutUs.Main.Current as AboutUsDT;
                        if( !firstSet )
                        {
                            firstSet = true;
                        }
                        <div style="@((firstSet == true) ? "padding-top:30px;":"")" class="col-md-12 mb-md-12 mb-0 col-lg-12">
                            <div class="unit-4">
                                <div class="unit-4-icon mr-4 mb-3"><span class="text-secondary icon-phonelink"></span></div>
                                <div>
                                    <h3>@aboutUsDT.Title</h3>
                                    <p>@aboutUsDT.SubTitle</p>
                                    @*<p class="mb-0"><a href="#">Learn More</a></p>*@
                                </div>
                            </div>
                        </div>
                    }
                    @*<div class="col-md-12 mb-md-5 mb-0 col-lg-6">
                            <div class="unit-4">
                                <div class="unit-4-icon mr-4 mb-3"><span class="text-secondary icon-extension"></span></div>
                                <div>
                                    <h3>Intuitive Thinkers</h3>
                                    <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Perferendis quis.</p>
                                    <p class="mb-0"><a href="#">Learn More</a></p>
                                </div>
                            </div>
                        </div>*@
                </div>
            </div>

        </div>
    </div>
</div>


