@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.Contact>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = "Layout.cshtml";
    Contact contact = Model.Content;
    ContactDT contactDT = contact.Main.Current as ContactDT;
}

<div class="site-blocks-cover inner-page-cover overlay" style="background-image: url(@contactDT.Banner.Url);" data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">
            <div class="col-md-12" data-aos="fade-up" data-aos-delay="400">
                <div class="row justify-content-center mb-4">
                    <div class="col-md-8 text-center">
                        <h1>@contactDT.Title</h1>
                        <p class="lead mb-5">@contactDT.Title</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-7 mb-5">

                <form action="#" class="p-5 bg-white">

                    <h2 class="h4 text-black mb-5">@Umbraco.GetDictionaryValue( "Contact_Form" )</h2>
                    <div class="row form-group">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <label class="text-black" for="fname">@Umbraco.GetDictionaryValue( "First_Name" )</label>
                            <input type="text" id="fname" class="form-control">
                        </div>
                        <div class="col-md-6">
                            <label class="text-black" for="lname">@Umbraco.GetDictionaryValue( "Last_Name" )</label>
                            <input type="text" id="lname" class="form-control">
                        </div>
                    </div>
                    <div class="row form-group">

                        <div class="col-md-12">
                            <label class="text-black" for="email">@Umbraco.GetDictionaryValue( "Email" )</label>
                            <input type="email" id="email" class="form-control">
                        </div>
                    </div>
                    <div class="row form-group">

                        <div class="col-md-12">
                            <label class="text-black" for="subject">@Umbraco.GetDictionaryValue( "Subject" )</label>
                            <input type="subject" id="subject" class="form-control">
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12">
                            <label class="text-black" for="message">@Umbraco.GetDictionaryValue( "Message" )</label>
                            <textarea name="message" id="message" cols="30" rows="7" class="form-control" placeholder="Write your notes or questions here..."></textarea>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12">
                            <input type="submit" value="@Umbraco.GetDictionaryValue("Send_Message")" class="btn btn-primary btn-md text-white">
                        </div>
                    </div>

                </form>
            </div>
            <div class="col-md-5">

                <div class="p-4 mb-3 bg-white">
                    @*<p class="mb-0 font-weight-bold">@Umbraco.GetDictionaryValue( "Address" )</p>
                    <p class="mb-4">@contactDT.Address</p>
                    <p class="mb-0 font-weight-bold">@Umbraco.GetDictionaryValue( "Phone" )</p>
                    <p class="mb-4"><a href="#">@contactDT.Phone</a></p>
                    <p class="mb-0 font-weight-bold">@Umbraco.GetDictionaryValue( "Email" )</p>
                    <p class="mb-0"><a href="#">@contactDT.Email</a></p>*@
                    <img style="width:100%;" src="@contact.Photo.Url"/>
                </div>

                <div class="p-4 mb-3 bg-white">
                    <h3 class="h5 text-black mb-3">@Umbraco.GetDictionaryValue( "More_Info" )</h3>
                    <p>@contactDT.Description</p>
                    @*<p><a href="#" class="btn btn-primary btn-md text-white">Learn More</a></p>*@
                </div>
            </div>
        </div>
    </div>
</div>